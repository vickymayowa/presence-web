generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
    url = env("DATABASE_URL")
}

// =========================
// ENUMS
// =========================

enum UserRole {
  ceo
  hr
  manager
  staff
}

enum AttendanceStatus {
  present
  absent
  late
  half_day
  leave
  holiday
}

enum WorkMode {
  office
  remote
  hybrid
}

enum VerificationMethod {
  face_id
  nfc
  manual
  beacon
}

enum LeaveType {
  annual
  sick
  personal
  maternity
  paternity
  unpaid
  work_from_home
}

enum RequestStatus {
  pending
  approved
  rejected
}

enum NotificationType {
  attendance
  announcement
  reminder
  leave
  info
}

// =========================
// MODELS
// =========================

model Company {
  id             String          @id @default(uuid())
  name           String
  slug           String          @unique
  logo           String?
  users          User[]
  departments    Department[]
  branches       Branch[]
  checkInWindows CheckInWindow[]
  announcements  Announcement[]
  activityLogs   ActivityLog[]
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
}

model User {
  id         String   @id @default(uuid())
  email      String   @unique
  password   String
  firstName  String
  lastName   String
  role       UserRole
  department String
  position   String
  avatar     String?
  phone      String?
  joinedAt   DateTime @default(now())

  companyId String
  company   Company @relation(fields: [companyId], references: [id])

  branchId  String?
  branch    Branch? @relation(fields: [branchId], references: [id])

  managerId    String?
  manager      User?   @relation("UserManager", fields: [managerId], references: [id])
  subordinates User[]  @relation("UserManager")

  managedDepartments Department[]

  attendanceRecords AttendanceRecord[]
  leaveRequests     LeaveRequest[]
  overtimeRequests  OvertimeRequest[]
  workSchedules     WorkSchedule[]
  notifications     Notification[]
  pushSubscriptions PushSubscription[]
  activityLogs      ActivityLog[]

  approvedLeaves   LeaveRequest[]    @relation("LeaveApprover")
  approvedOvertime OvertimeRequest[] @relation("OvertimeApprover")

  organizedEvents  CalendarEvent[]   @relation("EventOrganizer")
  attendingEvents  CalendarEvent[]   @relation("EventAttendees")

  announcements    Announcement[]

  sessionId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Branch {
  id        String   @id @default(uuid())
  name      String
  location  String?
  address   String?
  
  companyId String
  company   Company  @relation(fields: [companyId], references: [id])
  
  users     User[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([companyId, name])
}

model PushSubscription {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  endpoint  String   @unique
  p256dh    String
  auth      String
  createdAt DateTime @default(now())
}


model AttendanceRecord {
  id     String @id @default(uuid())
  userId String
  user   User   @relation(fields: [userId], references: [id])

  date               DateTime
  checkIn            DateTime?
  checkOut           DateTime?
  status             AttendanceStatus
  workMode           WorkMode
  verificationMethod VerificationMethod?
  notes              String?
  totalHours         Float?

  location Json?

  createdAt DateTime @default(now())

  @@unique([userId, date])
  @@index([date])
}

model LeaveRequest {
  id     String @id @default(uuid())
  userId String
  user   User   @relation(fields: [userId], references: [id])

  type      LeaveType
  startDate DateTime
  endDate   DateTime
  reason    String
  status    RequestStatus

  approvedBy      String?
  approver        User?     @relation("LeaveApprover", fields: [approvedBy], references: [id])
  approvedAt      DateTime?
  rejectionReason String?

  createdAt DateTime @default(now())

  @@index([status])
}

model Department {
  id   String @id @default(uuid())
  name String

  companyId String
  company   Company @relation(fields: [companyId], references: [id])

  managerId String
  manager   User   @relation(fields: [managerId], references: [id])

  description String?
  headCount   Int

  createdAt DateTime @default(now())

  @@unique([companyId, name])
}

model Notification {
  id     String @id @default(uuid())
  userId String
  user   User   @relation(fields: [userId], references: [id])

  title     String
  message   String
  type      NotificationType
  read      Boolean          @default(false)
  actionUrl String?
  createdAt DateTime         @default(now())

  @@index([userId, read])
}

model WorkSchedule {
  id     String @id @default(uuid())
  userId String
  user   User   @relation(fields: [userId], references: [id])

  dayOfWeek  Int
  startTime  String
  endTime    String
  workMode   WorkMode
  isFlexible Boolean

  @@unique([userId, dayOfWeek])
}

model OvertimeRequest {
  id     String @id @default(uuid())
  userId String
  user   User   @relation(fields: [userId], references: [id])

  date   DateTime
  hours  Float
  reason String
  status RequestStatus

  approvedBy String?
  approver   User?     @relation("OvertimeApprover", fields: [approvedBy], references: [id])
  approvedAt DateTime?

  createdAt DateTime @default(now())
}

model CheckInWindow {
  id        String   @id @default(uuid())
  companyId String
  company   Company  @relation(fields: [companyId], references: [id])

  name        String // e.g., "Morning Shift", "Afternoon Shift"
  description String?
  
  startTime String // Format: "HH:mm" e.g., "07:30"
  endTime   String // Format: "HH:mm" e.g., "10:00"
  
  daysOfWeek String // Comma-separated: "1,2,3,4,5" (Monday-Friday)
  
  isActive  Boolean @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([companyId, isActive])
}

model ActivityLog {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  companyId String
  company   Company  @relation(fields: [companyId], references: [id])
  
  action      String   // e.g., "LOGIN", "CHECK_IN", "CHECK_OUT", "PAGE_VIEW"
  description String?  // e.g., "User logged into the system"
  metadata    Json?    // e.g., { "page": "/dashboard", "ip": "..." }
  
  createdAt DateTime @default(now())

  @@index([companyId])
  @@index([createdAt])
}

model CalendarEvent {
  id          String   @id @default(uuid())
  title       String
  description String?
  startTime   DateTime
  endTime     DateTime
  type        String   // 'meeting', 'event', 'holiday', 'deadline'
  mode        WorkMode @default(office) // 'office', 'remote'
  
  location    String?
  meetingLink String?

  companyId   String
  company     Company  @relation(fields: [companyId], references: [id])

  organizerId String
  organizer   User     @relation("EventOrganizer", fields: [organizerId], references: [id])

  attendees   User[]   @relation("EventAttendees")

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([companyId])
  @@index([startTime])
}

model Announcement {
  id        String   @id @default(uuid())
  title     String
  content   String   @db.Text
  type      String   @default("general") // "general", "urgent", "update"
  
  companyId String
  company   Company  @relation(fields: [companyId], references: [id])
  
  authorId  String
  author    User     @relation(fields: [authorId], references: [id])
  
  isActive  Boolean  @default(true)
  expiresAt DateTime?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([companyId])
}
